<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/resetImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_reset" android:layout_gravity="center_vertical" android:paddingLeft="5dp" android:paddingRight="5dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" android:layout_gravity="center_vertical" android:inputType="none" >

        <requestFocus />
    </EditText>

</LinearLayout>
